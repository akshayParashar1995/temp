<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back6portrait"


    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#4d000000"
        >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4.8"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="fill_parent"

                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="120dp"
                android:layout_gravity="center"

                />

        </FrameLayout>




        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="fill_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_height="0dp"
            app:mtf_animationDuration="50"
            android:layout_weight="3.2"
            app:mtf_image="@mipmap/ic_person_black_24dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name_edittext"
                android:hint="User Name"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

        </com.github.florent37.materialtextfield.MaterialTextField>



        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="fill_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_height="0dp"

            app:mtf_animationDuration="50"
            android:layout_weight="3.2"
            app:mtf_image="@mipmap/ic_lock_black_24dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_edittext"
                android:fontFamily="sans-serif-light"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

        </com.github.florent37.materialtextfield.MaterialTextField>


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            >

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/activity_main_blogin"
                android:layout_width="170dp"
                android:layout_height="50dp"

                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="#424242"
                fancy:fb_focusColor="#b3424242"
                android:fontFamily="sans-serif-light"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                android:gravity="center"
                fancy:fb_text="Log In"
                fancy:fb_textColor="#FFFFFF"
                android:layout_gravity="center" />


        </FrameLayout>


    </LinearLayout>


</FrameLayout>
