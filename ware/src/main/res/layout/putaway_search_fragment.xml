<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:weightSum="3"
    android:paddingLeft="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="From "
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />



        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:id="@+id/bdatefrom"
            android:text="00/00/0000"
            android:textSize="15sp"
            android:background="#424242"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="To  "
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:textColor="#000000"
            />


        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:id="@+id/bdateto"
            android:text="00/00/0000"
            android:background="#424242"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Client Code "
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:id="@+id/client_list_dropdown"

            >

        </Spinner>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="RTag  "
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical|right"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/rtag_no" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        >

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/searchbutton_searchfragment"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="#424242"
            fancy:fb_focusColor="#b3424242"
            android:fontFamily="sans-serif-light"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            android:gravity="center"
            fancy:fb_text="Search"
            fancy:fb_textColor="#FFFFFF"
            android:layout_gravity="center" />

    </LinearLayout>


</LinearLayout>